<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextviewStyle">
        <item name="android:fontFamily">@font/main</item>
        <item name="fontFamily">@font/main</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DeleteAlarmDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="timepicker">
        <item name="android:numbersTextColor">#000000</item>
        <item name="android:numbersBackgroundColor">@color/white</item>
        <item name="android:numbersSelectorColor">@color/purple_500</item>
        <item name="android:headerBackground">@color/white</item>
        <item name="colorAccent">#FF5722</item>
        <item name="colorControlActivated">#2196F3</item>
        <item name="android:selectableItemBackgroundBorderless">@color/black</item>
        <item name="colorControlHighlight">#d50000</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
</resources>